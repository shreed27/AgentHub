@import "tailwindcss";

@layer base {
  :root {
    --background: 0 0% 3%;
    --foreground: 210 40% 98%;
    /* Neon Palette */
    --neon-blue: 217 91% 60%;
    --neon-cyan: 189 94% 48%;
    --neon-purple: 270 95% 60%;
    --neon-green: 142 71% 45%;
    --neon-red: 0 84% 60%;
    --neon-yellow: 48 96% 51%;

    --card: 0 0% 4%;
    --card-foreground: 210 40% 98%;
    --popover: 0 0% 4%;
    --popover-foreground: 210 40% 98%;
    --primary: 217 91% 60%;
    --primary-foreground: 222 47% 11%;
    --secondary: 215 27.9% 16.9%;
    --secondary-foreground: 210 40% 98%;
    --muted: 215 27.9% 16.9%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 215 27.9% 16.9%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 215 27.9% 16.9%;
    --input: 215 27.9% 16.9%;
    --ring: 217 91% 60%;
    --radius: 0px;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    font-family: var(--font-geist-mono), monospace;
    background-image:
      linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%),
      linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px),
      linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px);
    background-size: 100% 4px, 40px 40px, 40px 40px;
  }
}

@utility tech-border-neon {
  position: relative;
  border: 1px solid rgba(59, 130, 246, 0.3);
  background: rgba(10, 10, 12, 0.6);
  clip-path: polygon(0 0,
      100% 0,
      100% calc(100% - 15px),
      calc(100% - 15px) 100%,
      0 100%);
}

@utility btn-cyber {
  @apply relative overflow-hidden font-bold uppercase tracking-wider transition-all duration-200 inline-flex items-center justify-center;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.5);
  color: #3b82f6;
  background-image: linear-gradient(45deg, transparent 5%, rgba(59, 130, 246, 0.1) 5%, rgba(59, 130, 246, 0.1) 10%, transparent 10%, transparent 100%);
  background-size: 10px 10px;
}

@utility btn-cyber:hover {
  background: rgba(59, 130, 246, 0.3);
  border-color: #3b82f6;
  box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  text-shadow: 0 0 8px rgba(59, 130, 246, 0.8);
}

@utility btn-cyber:active {
  transform: scale(0.98);
}

@utility btn-cyber-red {
  @apply btn-cyber;
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.5);
  color: #ef4444;
}

@utility btn-cyber-red:hover {
  background: rgba(239, 68, 68, 0.3);
  border-color: #ef4444;
  box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
  text-shadow: 0 0 8px rgba(239, 68, 68, 0.8);
}

@utility glitch-text {
  position: relative;
}

@utility glitch-text:hover {
  animation: glitch-skew 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
}

/* We need standard CSS for pseudo-elements and keyframes as @utility usually targets classes */

/* Keyframes need to be global */
@keyframes glitch-skew {
  0% {
    transform: skew(0deg);
  }

  20% {
    transform: skew(-2deg);
  }

  40% {
    transform: skew(2deg);
  }

  60% {
    transform: skew(-1deg);
  }

  80% {
    transform: skew(1deg);
  }

  100% {
    transform: skew(0deg);
  }
}

@keyframes glitch-anim-1 {
  0% {
    clip-path: inset(20% 0 80% 0);
  }

  20% {
    clip-path: inset(60% 0 10% 0);
  }

  40% {
    clip-path: inset(40% 0 50% 0);
  }

  60% {
    clip-path: inset(80% 0 5% 0);
  }

  80% {
    clip-path: inset(10% 0 40% 0);
  }

  100% {
    clip-path: inset(30% 0 30% 0);
  }
}

.glitch-text::before,
.glitch-text::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--background);
  opacity: 0.8;
}

.glitch-text::before {
  left: 2px;
  text-shadow: -2px 0 #ff00c1;
  clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
  animation: glitch-anim-1 2s infinite linear alternate-reverse;
  display: none;
}

.glitch-text:hover::before {
  display: block;
}

.glitch-text::after {
  left: -2px;
  text-shadow: -2px 0 #00fff9;
  clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
  animation: glitch-anim-1 3s infinite linear alternate-reverse;
  display: none;
}

.glitch-text:hover::after {
  display: block;
}

@utility clipped-box {
  clip-path: polygon(0 0,
      100% 0,
      100% calc(100% - 15px),
      calc(100% - 15px) 100%,
      0 100%);
}

@utility clipped-tr {
  clip-path: polygon(0 0,
      calc(100% - 10px) 0,
      100% 10px,
      100% 100%,
      0 100%);
}

@utility scanline-overlay {
  background: linear-gradient(to bottom,
      rgba(255, 255, 255, 0),
      rgba(255, 255, 255, 0) 50%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.2));
  background-size: 100% 4px;
}

@utility scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}